<%- include('../partials/header') %>
<style class="index_img">
  body {
    background-image: url("https://wallpaperaccess.com/full/175454.jpg");
    background-size: 100%;
  }
</style>
<div>
  <a class="goback" href="/weapons/contemporaries">GO BACK</a>
</div>
<div class="medival-show">
  <ul class="medival-ul">
    <li>Name: <%=weapon.weaponName%></li>
    <li>Region: <%=weapon.weaponType%></li>
    <li>Who: <%=weapon.weaponTypeName%></li>
    <li>against: <%=weapon.weaponOriginRegion%></li>
    <li>From: <%=weapon.weaponYear%></li>
  </ul>
</div>

<%if(user) {%>
  <div class="facts-div">
    <ul class="facts-ul">
      <%weapon.comments.forEach((h, idx) => { %>
      <%if(user.comments.includes(h._id)) {%>
      <li class="facts-li">
        <%= user.name %>: 
        <%= comments[idx].comments%>
        <%if(user.comments.includes(h._id)) {%>
        <div class="update">
          <form action="/contemporaries/delete/<%=h._id%>?_method=DELETE" method="POST">
            <button type="submit" class="histories-button">X</button>
          </form>
        </div>
        <%}%>
      </li>
      <%}});%>
      <br />
      <br />
    </ul>
  </div>
  
  <div class="facts-text">
    <form action="<%=`/contemporaries/comments/${id}`%>" method="POST">
      facts:<br />
      <textarea class="textarea" name="comments" rows="4" cols="45"></textarea>
      <br />
      <input type="submit" />
    </form>
  </div>
  <% } else { %>
  <div class="facts-div">
    <ul class="facts-ul">
      <%weapon.comments.forEach((h, idx) => { %>
      <li class="facts-li">
        <%= comments[idx].comments%>
      </li>
      <%});%>
      <br />
      <br />
    </ul>
  </div>
  <%}%> 
<%- include('../partials/footer') %>
