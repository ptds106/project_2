<%- include('../partials/header') %>
<style class="index_img">
  body {
    background-image: url("https://steamuserimages-a.akamaihd.net/ugc/922544126428224433/D837FEF4A0500F7395FDB26034746110C54DF8EB/");
    background-size: 100%;
  }
</style>
<div>
  <a class="goback" href="/ancients">GO BACK</a>
</div>
<div class="medival-show">
  <ul class="medival-ul">
    <li class = "show-li">Name: <%=history.name%></li>
    <li class = "show-li">Region: <%=history.region%></li>
    <li class = "show-li">Who: <%=history.involvedStates1%></li>
    <li class = "show-li">against: <%=history.involvedStates2%></li>
    <li class = "show-li">From: <%=history.dateFrom%></li>
    <li class = "show-li">To: <%=history.dateTo%></li>
    <li class = "show-li">Casualties: <%=history.casualties%></li>
    <li class = "show-li">Facts:</li> 
    <li class = "show-li"><%=history.facts%></li>
  </ul>
</div>
<%if(user) {%>
  <div class="facts-div">
    <ul class="facts-ul">
      <%comments.forEach((c, idx) => { %>
      <%history.comments.forEach((h, idx) => { %>
        <%if(c._id.toString() == h.toString()) {%>
      <li class="facts-li">
        <%= user.name %>: 
        <%= c.comments%>
        <%if(user.comments.includes(h._id)) {%>
        <div class="update">
          <form action="/medivals/delete/<%=h._id%>?_method=DELETE" method="POST">
            <button type="submit" class="histories-button">X</button>
          </form>
        </div>
        <%}%>
      </li>
      <%}});%>
      <%})%>
      <br />
      <br />
    </ul>
  </div>
  
<div class="facts-text">
  <form action="<%=`/ancients/comments/${id}`%>" method="POST">
    facts:<br />
    <textarea class="textarea" name="comments" rows="4" cols="45"></textarea>
    <br />
    <input type="submit" />
  </form>
</div>
<% } else { %>
  <div class="facts-div">
    <ul class="facts-ul">
      <%comments.forEach((c, idx) => { %>
      <%history.comments.forEach((h, idx) => { %>
        <%if(c._id.toString() == h.toString()) {%>
      <li class="facts-li"> 
        <%= c.comments%>
    </li>
    <%}})});%>
    <br />
    <br />
  </ul>
</div>
<%}%> 
<%- include('../partials/footer') %>
